// Test bitwise compound assignment operators: &=, |=, ^=, <<=, >>=
fn main() {
    var result = 0;
    
    // &= (bitwise AND assign)
    var a = 15;     // 1111 in binary
    a &= 6;        // 0110 → a = 6
    result = result + a;   // 0 + 6 = 6
    
    // |= (bitwise OR assign)
    var b = 3;      // 0011
    b |= 12;       // 1100 → b = 15
    result = result + b;   // 6 + 15 = 21
    
    // ^= (bitwise XOR assign)
    var c = 15;     // 1111
    c ^= 9;        // 1001 → c = 6
    result = result + c;   // 21 + 6 = 27
    
    // <<= (shift left assign)
    var d = 1;
    d <<= 3;       // d = 8
    result = result + d;   // 27 + 8 = 35
    
    // >>= (shift right assign)
    var e = 32;
    e >>= 2;       // e = 8
    result = result + e;   // 35 + 8 = 43
    
    // Combined with arithmetic compound assign
    var f = 10;
    f += 5;         // f = 15
    f &= 12;        // f = 12
    result = result + f;   // 43 + 12 = 55
    
    return result;  // 55
}
