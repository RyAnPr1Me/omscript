// Test float literal support and arithmetic
fn main() {
    // Float variable declaration and printing
    var x = 3.5;
    var y = 1.5;
    print(x);        // Should print 3.5
    print(y);        // Should print 1.5

    // Float arithmetic
    var sum = x + y;
    print(sum);       // Should print 5

    var diff = x - y;
    print(diff);      // Should print 2

    var prod = x * y;
    print(prod);      // Should print 5.25

    var quot = x / y;
    print(quot);      // Should print 2.33333

    // Float negation
    var neg = -x;
    print(neg);       // Should print -3.5

    // Mixed int/float arithmetic
    var a = 10 + 2.5;
    print(a);         // Should print 12.5

    // Float comparison in if statement
    if (x > y) {
        print(1);     // Should print 1
    }

    // Float in while loop condition
    var counter = 3.0;
    var loops = 0;
    while (counter > 0.5) {
        loops = loops + 1;
        counter = counter - 1.0;
    }
    print(loops);     // Should print 3

    return 5;
}
