// Test do-while loop - body executes at least once
fn main() {
    // Count from 1 to 5 using do-while
    var sum = 0;
    var i = 1;
    do {
        sum += i;
        i++;
    } while (i <= 5);
    // sum = 1+2+3+4+5 = 15

    // do-while with initial false condition - body still runs once
    var ran_once = 0;
    do {
        ran_once = 1;
    } while (0);

    return sum + ran_once;
    // 15 + 1 = 16
}
